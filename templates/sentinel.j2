# {{ ansible_managed }}
daemonize yes
{% if supervised_mode == "yes" %}
supervised systemd
{% endif %}
dir {{ redis_dbdir }}
pidfile {{ sentinel_pid }}
logfile {{ sentinel_logfile }}
protected-mode yes
{% if sentinel_requirepass %}
requirepass {{ sentinel_requirepass }}
{% endif %}

bind {{ ansible_default_ipv4.address }} {{ redis_bind_loop }}
port {{ sentinel_port }}
{% if sentinel_deny_scripts_reconfig == "yes" %}
sentinel deny-scripts-reconfig {{ sentinel_deny_scripts_reconfig }}
{% endif %}
sentinel monitor {{ redis_master_name }} {{ redis_masters }} {{ redis_port }} {{ sentinel_quorum }}
sentinel down-after-milliseconds {{ redis_master_name }} {{ sentinel_down_ms }}
sentinel failover-timeout {{ redis_master_name }} {{ sentinel_failtime }}

{% if redis_requirepass %}
sentinel auth-pass {{ redis_master_name }} {{ redis_requirepass }}
{% else %}

{% endif %}



