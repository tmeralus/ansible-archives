version: '3.8'
services:
  db:
    image: postgres:14.1-alpine
    restart: always
    environment:
      - POSTGRES_USER={{ pg_user }}
      - POSTGRES_PASSWORD={{ pg_user }}
    ports:
      - '5432:5432'
    volumes: 
      - db:/var/lib/postgresql/data
      - ./db/init.sql:docker-entrypoint-initdb.d/create_tables.sql
      - ./scripts:{{ pg_scripts_dir }}
volumes:
  db:
    driver: local
